<div class="engineerSigninPage">
  <header class="header">
    <div>エンジニアアカウントでログイン</div>
  </header>
  <div class="container">
    <%# <h2 class="title">エンジニア ログイン</h2> %>
    <%= form_with model: @engineer, scope: :engineer, url: engineer_session_path, class: "mt-5", local: true do |f| %>
      <%= f.hidden_field :email, value: "engineer@test.com" %>
      <%= f.hidden_field :password, value: "1234abcd" %>
      <div class="text-center">
        <%= f.submit "かんたんログイン", class: "btn loginBtn" %>
      </div>
    <% end %>
    <%= form_with model: @engineer, scope: :engineer, url: engineer_session_path, class: "mt-5", local: true do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email", placeholder: "メールアドレスを入力してください" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "パスワードを入力してください" %>
      </div>
      <div class="text-center">
        <%= f.submit "ログインする" , class: "loginBtn"%>
      </div>
    <% end %>
    <%= render "engineers/shared/links" %>
  </div>
</div>
