<div class="engineerSignupPage">
  <header class="header">
    <div>エンジニアアカウントを作成</div>
  </header>
  <div class="container">
    <%= form_with model: @engineer, scope: :engineer, url: engineer_session_path, class: "mt-5", local: true do |f| %>
      <%= f.hidden_field :email, value: "engineer@test.com" %>
      <%= f.hidden_field :password, value: "1234abcd" %>
      <div class="text-center">
        <%= f.submit "かんたんログイン", class: "btn submitBtn" %>
      </div>
    <% end %>
    <%= form_with model: @engineer, url: engineer_registration_path, class: "mt-5", method: :post, local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <label>名前</label>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control", placeholder: "メールアドレスを入力してください", autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em><%= @minimum_password_length %>文字以上入力してください</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力してください", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.label :phone_number, "電話番号" %>
        <%= f.telephone_field :phone_number, class: "form-control", placeholder: "電話番号を入力してください(ハイフンは不要です)", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "確認用パスワード" %>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワードを再入力してください", autocomplete: "off" %>
      </div>
      <div class="form-group">
        <div><label for=''>性別</label></div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :sex, "男性", class: "form-check-input", id: "inlineRadio1" %>
          <label class="form-check-label" for="inlineRadio1">男性</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :sex, "女性", class: "form-check-input", id: "inlineRadio2" %>
          <label class="form-check-label" for="inlineRadio2">女性</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :sex, "その他", class: "form-check-input", id: "inlineRadio3" %>
          <label class="form-check-label" for="inlineRadio3">その他</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :sex, "回答しない", class: "form-check-input", id: "inlineRadio4" %>
          <label class="form-check-label" for="inlineRadio4">回答しない</label>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= f.label :birthday, "生年月日" %><br />
          <div class="">
          <%= f.date_select :birthday, {use_month_numbers: true, start_year: Time.now.year, end_year: 1900}, {class: "form-control date"} %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label>自己紹介文</label>
        <%= f.text_area :self_introduction, maxlength: 500, rows: 10, class: "form-control"%>
      </div>
      <div class="text-center">
        <%= f.submit "登録する" , class: "btn submitBtn"%>
        <%= render "engineers/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
