<h2>Sign up</h2>

<%= form_with model: @engineer, url: engineer_registration_path, class: "", method: :post, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div><label for=''>性別</label></div>
  <div class="form-check form-check-inline">
    <%= f.radio_button :sex, "男性", class: "form-check-input", id: "inlineRadio1" %>
    <label class="form-check-label" for="inlineRadio1">男性</label>
  </div>
  <div class="form-check form-check-inline">
    <%= f.radio_button :sex, "女性", class: "form-check-input", id: "inlineRadio2" %>
    <label class="form-check-label" for="inlineRadio2">女性</label>
  </div>
  <div class="form-check form-check-inline">
    <%= f.radio_button :sex, "その他", class: "form-check-input", id: "inlineRadio3" %>
    <label class="form-check-label" for="inlineRadio3">その他</label>
  </div>
  <div class="form-check form-check-inline">
    <%= f.radio_button :sex, "回答しない", class: "form-check-input", id: "inlineRadio4" %>
    <label class="form-check-label" for="inlineRadio4">回答しない</label>
  </div>

  <div class="field">
    <%= f.label :birthday %><br />
    <%== sprintf(f.date_select(:birthday, with_css_classes: true, prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日' %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :self_introduction %><br />
    <%= f.text_area :self_introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "engineers/shared/links" %>
